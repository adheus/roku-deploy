{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false,
    "lib": [
      "es2015"
    ],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "device.spec.ts"
  ]
}
